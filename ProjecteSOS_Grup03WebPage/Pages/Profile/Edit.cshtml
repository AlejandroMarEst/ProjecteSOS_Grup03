@page
@model ProjecteSOS_Grup03WebPage.Pages.Profile.EditModel
@{
	ViewData["Title"] = "Editar Perfil";
	var token = HttpContext.Session.GetString("AuthToken");
	var loggedIn = Tools.TokenHelper.IsTokenSession(token);
}

<h2>Editar Perfil</h2>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
	<div class="alert alert-danger">@Model.ErrorMessage</div>
}

@if (loggedIn)
{
	if (!string.IsNullOrEmpty(Model.Name) && !string.IsNullOrEmpty(Model.Phone))
	{
		<form method="post">
			<div class="mb-3">
				<label asp-for="Name">Nom d'usuari</label>
				<input asp-for="Name" class="form-control" />
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>
			<div class="mb-3">
				<label asp-for="Phone">Telèfon</label>
				<input asp-for="Phone" class="form-control" />
				<span asp-validation-for="Phone" class="text-danger"></span>
			</div>
			<button type="submit" class="btn btn-primary">Desar</button>
			<a asp-page="Profile" class="btn btn-secondary">Cancel·lar</a>
		</form>
	}
}
else
{
	<div class="alert alert-danger">Inicia sessió per a editar el teu usuari</div>
}