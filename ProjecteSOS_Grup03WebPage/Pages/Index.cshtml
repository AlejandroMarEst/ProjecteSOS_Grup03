@page
@model IndexModel
@using Microsoft.AspNetCore.Mvc.Localization
@using ProjecteSOS_Grup03WebPage
@inject IHtmlLocalizer<SharedResource> SharedLocalizer
@{
    ViewData["Title"] = SharedLocalizer["HomePageTitle"];
}

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger mt-3">@Model.ErrorMessage</div>
}

@if (Model.IsEmployee)
{
    <div class="mb-3">
        <a class="btn btn-primary" asp-page="/Products/Create">@SharedLocalizer["AddProductButton"]</a>
    </div>
}

@if (Model.Products.Any())
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@SharedLocalizer["NameLabel"]</th>
                <th>@SharedLocalizer["Description"]</th>
                <th>@SharedLocalizer["Image"]</th>
                <th>@SharedLocalizer["Price"]</th>
                <th></th>
                @if (Model.IsEmployee)
                {
                    <th>@SharedLocalizer["ActionsLabel"]</th>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var prod in Model.Products)
            {
                <tr>
                    <td>@prod.Name</td>
                    <td>@prod.Description</td>
                    <td>
                        @if (!string.IsNullOrEmpty(prod.Image))
                        {
                            <img src="@prod.Image" alt="@prod.Name" style="max-width: 100px; max-height: 100px; object-fit: cover;" />
                        }
                    </td>
                    <td>@prod.Price.ToString("C")</td>
                    <td>
                        <div class="btn-group btn-group-sm" role="group">
                            <a asp-page="/Products/Details" asp-route-id="@prod.ProductId" class="btn btn-info">@SharedLocalizer["Details"]</a>

                            @{
                                var token = HttpContext.Session.GetString("AuthToken");
                                var loggedIn = Tools.TokenHelper.IsTokenSession(token);
                            }

                            @if (loggedIn)
                            {
                                <a asp-page="/Products/AddToCart" asp-route-id="@prod.ProductId" class="btn btn-success ms-1">@SharedLocalizer["AddToCartButton"]</a>
                            }
                        </div>
                    </td>

                    @if (Model.IsEmployee)
                    {
                        <td>
                            <div class="btn-group btn-group-sm" role="group">
                                <a asp-page="/Products/Edit" asp-route-id="@prod.ProductId" class="btn btn-primary">@SharedLocalizer["EditButton"]</a>

                                <form method="post" asp-page="/Products/Delete" asp-route-id="@prod.ProductId" class="d-inline ms-1">
                                    <button type="submit" class="btn btn-danger" onclick="return confirm('@SharedLocalizer["ConfirmDeleteProduct"]')">@SharedLocalizer["Delete"]</button>
                                </form>
                            </div>
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
}
else if (string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-info mt-3">@SharedLocalizer["NoProductsAvailable"]</div>
}